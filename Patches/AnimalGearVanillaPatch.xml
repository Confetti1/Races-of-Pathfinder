<?xml version="1.0" encoding="utf-8" ?>
<Patch>
    <Operation Class="PatchOperationSequence">
        <!-- check that the animal scarf exists and if it does, enable it and other supported animal clothes for the Cynobun-->
        <success>Always</success>
        <operations>
            <li Class="PatchOperationTest">
                <xpath>/Defs/ThingDef[defName="Apparel_AnimalScarf"]</xpath>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName="Apparel_AnimalScarf"]/apparel/tags</xpath>
                <value>
                    <li>Cynobun</li>
                    <li>CynobunHirsutus</li>
                </value>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName="Apparel_AnimalClothes"]/apparel/tags</xpath>
                <value>
                    <li>Cynobun</li>
                    <li>CynobunHirsutus</li>
                </value>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName="Apparel_AnimalFlakArmor"]/apparel/tags</xpath>
                <value>
                    <li>Cynobun</li>
                    <li>CynobunHirsutus</li>
                </value>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName="Apparel_AnimalPlateArmor"]/apparel/tags</xpath>
                <value>
                    <li>Cynobun</li>
                    <li>CynobunHirsutus</li>
                </value>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName="Apparel_AnimalPowerArmor"]/apparel/tags</xpath>
                <value>
                    <li>Cynobun</li>
                    <li>CynobunHirsutus</li>
                </value>
            </li>
        </operations>
    </Operation>
</Patch>