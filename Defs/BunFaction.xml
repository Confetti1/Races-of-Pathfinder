              <Bun_Tribal_Archer>10</Bun_Tribal_Archer>
              <Bun_Tribal_Hunter>10</Bun_Tribal_Hunter>
              <Bun_Tribal_HeavyArcher>10</Bun_Tribal_HeavyArcher>
